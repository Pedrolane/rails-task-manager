<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<p>
  <% if @task.completed %>
        <i class="fa fa-check-square-o"></i> this task is completed
      <% else %>
        <i class="fa fa-square-o"></i> this task is not completed
      <% end %>
</p>

<%= link_to "Edit this task", edit_task_path(@task) %>
<%= link_to "Back to list", tasks_path %>
